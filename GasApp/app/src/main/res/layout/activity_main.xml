<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="3"
        android:id="@+id/gasGridLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/mpgLinearLayout"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mpgString"
                android:id="@+id/mpgTextView"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/mpgEditText"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/holo_orange_light"
                android:layout_weight="1.46"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/defaultMargin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="170dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/numStationsString"
                android:id="@+id/numStationsTextView"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/numStationsDropSpinner"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:entries="@array/num_of_stations"
                android:focusable="true"
                android:layout_gravity="center_vertical"
                android:background="@android:color/holo_orange_light" />
        </LinearLayout>

    </GridLayout>
</RelativeLayout>
